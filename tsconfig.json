{
  "compilerOptions": {
    "allowJs": true,
    "allowUmdGlobalAccess": true,
    "declaration": false,
    "esModuleInterop": true,
    "lib": [
      "ES2020"
    ],
    "module": "CommonJS",
    "noImplicitAny": false,
    "outDir": "dist",
    "resolveJsonModule": true,
    "strict": false,
    "strictNullChecks": true,
    "target": "ES6",
  },
  "include": [
    "src/**/*.ts",
  ],
  "exclude": [
    "**/*.test.*",
    "**/__mocks__",
    "**/__snapshots__",
    "src/test-helpers.ts",
  ],
}